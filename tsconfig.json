{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "outDir": "output",
        "rootDir": "./",
        "noUnusedLocals": true,
        "declaration": true,
        "allowJs": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "example"
    ],
    "include": [
        "./*",
        "./**/*"
    ]
}
